@model ProudSourcePrime.Models.DocumentFileModel


@using (Html.BeginForm("UploadDocument", "IO", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-sm-offset-1">
        @*@Html.AntiForgeryToken()*@
        <h4>Upload a document</h4>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => model.IsProject)
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => model.Profile_Id)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DocumentData, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-offset-2 col-md-6">
                    <label class="btn btn-default" >
                        <input id="document_upload" type="file" name="document_upload" />
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Upload" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
